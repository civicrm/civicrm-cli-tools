{
    "name": "civicrm/cli-tools",
    "authors": [
        {
            "name": "Tim Otten",
            "email": "totten@civicrm.org"
        }
    ],
    "require": {
        "civicrm/composer-downloads-plugin": "^3.0"
    },
    "config": {
        "allow-plugins": {
            "civicrm/composer-downloads-plugin": true
        },
        "bin": ["extern/civix", "extern/cv", "extern/coworker"]
    },
    "extra": {
        "downloads": {
            "*": {
                "path": "extern/{$id}"
            },
            "civix": {
                "version": "23.08.2",
                "url": "https://download.civicrm.org/civix/civix-{$version}.phar",
                "type": "phar"
            },
            "coworker": {
                "version": "0.2",
                "url": "https://download.civicrm.org/coworker/coworker.phar-v{$version}",
                "type": "phar"
            },
            "cv": {
                "version": "0.3.47",
                "url": "https://download.civicrm.org/cv/cv-{$version}.phar",
                "type": "phar"
            }
        }
    }
}
